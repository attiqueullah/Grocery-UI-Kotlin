<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verificationFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="233dp"
        android:src="@drawable/wallpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backbtnverify"
        android:layout_width="10dp"
        android:layout_height="18dp"
        android:layout_marginStart="25.01dp"
        android:layout_marginTop="56.83dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="140.02dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="Gilroy"
        android:lineHeight="29dp"
        android:text="Enter your 4-digit code"
        android:textColor="#181725"
        android:textFontWeight="600"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="24.88dp"

        android:layout_marginTop="196.6dp"
        android:text="Code"
        android:textColor="#7C7C7C"
        android:textSize="16dp"
        android:lineHeight="29dp"
        android:textFontWeight="600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="364dp"
        android:layout_height="39.55dp"

        android:layout_marginStart="25dp"
        android:layout_marginTop="235.6dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="- - - -"
            android:textColor="#181725"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="364dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="275.15dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="595.04dp"
        android:src="@drawable/numpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextbtnverify"
        android:layout_width="67dp"
        android:layout_height="67dp"


        android:layout_marginStart="322dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/nextroundbtn"
        android:drawableLeft="@drawable/nextbtn"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="25dp"

        android:layout_marginTop="452dp"
        android:layout_marginEnd="184dp"
        android:text="Resend Code"
        android:textColor="#53B175"
        app:layout_constraintEnd_toStartOf="@+id/nextbtnverify"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>