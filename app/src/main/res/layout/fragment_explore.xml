<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top half of the screen -->
    <!-- Add your existing views here -->

    <!-- Bottom half of the screen with ScrollView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="414dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="42.17dp"
            android:layout_marginLeft="30.5dp"
            android:layout_marginTop="16.52dp"
            android:src="@drawable/shopwithoutcolor" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="38.45dp"
            android:layout_marginLeft="99.09dp"
            android:layout_marginTop="16.52dp"
            android:src="@drawable/expcolor" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="39.73dp"
            android:layout_marginLeft="179.69dp"
            android:layout_marginTop="16.52dp"
            android:src="@drawable/cart" />

        <ImageView
            android:layout_width="53dp"
            android:layout_height="41.69dp"
            android:layout_marginLeft="259.28dp"
            android:layout_marginTop="16.52dp"
            android:src="@drawable/fav" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="42.17dp"
            android:layout_marginLeft="337.88dp"
            android:layout_marginTop="16.52dp"
            android:src="@drawable/acc" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ScrollView
        android:layout_width="403dp"
        android:layout_height="638dp"
        android:fillViewport="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".explore">

            <!-- Your existing layout code goes here -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="126dp"
                android:layout_height="57dp"
                android:layout_marginStart="144dp"
                android:layout_marginTop="16dp"
                android:text="Find Products"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/frashfruite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/cookingoil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="214dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/cookingoil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="214dp"
                android:layout_marginTop="380dp"
                android:src="@drawable/snack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.91"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="584dp"
                android:src="@drawable/frashfruite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/beverges"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="214dp"
                android:layout_marginTop="584dp"
                android:src="@drawable/beverges"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>